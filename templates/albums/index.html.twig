{% extends 'base.html.twig' %}

{% block title %}Albums index{% endblock %}

{% block body %}
    <h1>Albums index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Artist</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td>{{ album.id }}</td>
                <td>{{ album.artist }}</td>
                <td>{{ album.title }}</td>
                <td>
                    <a href="{{ path('app_albums_show', {'id': album.id}) }}">show</a>
                    <a href="{{ path('app_albums_edit', {'id': album.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_albums_new') }}">Create new</a>
{% endblock %}
